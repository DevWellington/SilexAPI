{% extends "layout.twig" %}

{% block title %}Editar Produto{% endblock %}

{% block content %}
    <div class='container'>
        <h1 style="float: left">Editar Produto</h1>
        <a href="{{ path('get-products') }}" class="btn btn-primary btn-lg active" style="float: right; margin: 1.250em 1.250em 0 0" role="button">Lista de Produtos</a>

        <div class="clearfix" style="margin-bottom: 1.2em"></div>
        <div class="row">

            <form method="POST" class="form-horizontal" role="form" action="{{ path('app-product-insert') }}">

                <input type="hidden" id="_method" name="_method" value="PUT" />
                <input type="hidden" class="form-control" name="id" id="id" value="{{ product.id }}">

                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="name" id="name" value="{{ product.name }}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Descrição</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="description" id="description" value="{{ product.description }}">
                    </div>
                </div>

                <div class="form-group">
                    <label for="value" class="col-sm-2 control-label">Valor</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="value" id="value" value="{{ product.value }}">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button type="submit" class="btn btn-primary">Gravar</button>
                    </div>
                </div>
            </form>

        </div>



    </div>
{% endblock %}